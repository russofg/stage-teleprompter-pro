{
  "build": {
    "version": "1.0.0",
    "description": "Stage Teleprompter Pro - Professional teleprompter application",
    "author": "Fernando Gabriel Russo",
    "license": "MIT",
    "repository": "https://github.com/russofg/stage-teleprompter-pro"
  },
  "targets": {
    "macos": {
      "x64": {
        "target": "x86_64-apple-darwin",
        "formats": ["dmg", "app"],
        "min_version": "11.0"
      },
      "arm64": {
        "target": "aarch64-apple-darwin",
        "formats": ["dmg", "app"],
        "min_version": "11.0"
      }
    },
    "windows": {
      "x64": {
        "target": "x86_64-pc-windows-msvc",
        "formats": ["msi", "exe"],
        "min_version": "10.0"
      }
    }
  },
  "build_settings": {
    "node_version": "18",
    "rust_version": "stable",
    "tauri_cli_version": "1.3",
    "build_mode": "release",
    "optimization": "max",
    "strip_symbols": true
  },
  "github_actions": {
    "workflows": [
      "build.yml",
      "build-manual.yml", 
      "release.yml"
    ],
    "triggers": {
      "automatic": ["push:main", "pull_request:main"],
      "manual": ["workflow_dispatch"],
      "tags": ["v*"]
    }
  }
}
